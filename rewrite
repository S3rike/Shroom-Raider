    def restart(self):
        while True:
            choice = instruct_input("Play again? (Y/N): ").strip().upper()
            if choice == 'Y':
                bool_check = True
                break
            elif choice == 'N':
                bool_check = False
                break
            else:
                pass
        if bool_check:
            self.fetch_map(self.source) 
            return True
        else:
            return False

